<!-- include header -->
<%- include ../../partials/header.ejs %>
<!-- include navbar -->
<%- include ../../partials/navbar.ejs %>
<!-- include sidebar -->
<%- include ../../partials/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Edit Nominal</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Edit Category</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form
              action="/nominal/edit/<%= nominal.id %>?_method=PUT"
              method="POST"
            >
              <div class="card-body">
                <div class="form-group">
                  <label>Coin Name</label>
                  <select
                    class="form-control select2"
                    name="coinName"
                    style="width: 100%"
                    required
                  >
                    <option value="<%= nominal.coinName %>" selected disabled>
                      <%= nominal.coinName %>
                    </option>
                    <option value="Gold">Gold</option>
                    <option value="Diamond">Diamond</option>
                    <option value="Jewel">Jewel</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="coinQuantity">Coin Quantity</label>
                  <input
                    type="number"
                    class="form-control"
                    id="coinQuantity"
                    value="<%= nominal.coinQuantity %>"
                    placeholder="Enter Coin Quantity"
                    name="coinQuantity"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="price">Price</label>
                  <input
                    type="number"
                    class="form-control"
                    id="price"
                    value="<%= nominal.price  %>"
                    placeholder="Enter Coin Quantity"
                    name="price"
                    required
                  />
                </div>
              </div>

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- include footer -->
<%- include ../../partials/footer.ejs %>
<!-- include js file -->
<%- include ../../partials/js.ejs %>
