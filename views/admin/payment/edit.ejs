<!-- include header -->
<%- include ../../partials/header.ejs %>
<!-- include navbar -->
<%- include ../../partials/navbar.ejs %>
<!-- include sidebar -->
<%- include ../../partials/sidebar.ejs %>
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Payment Update</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
            <li class="breadcrumb-item active">Update Payment</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form Update Payment</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="POST">
              <div class="card-body">
                <div class="form-group">
                  <label for="type">Type</label>
                  <input
                    type="text"
                    class="form-control"
                    id="type"
                    value="<%= payment.type %>"
                    placeholder="Type"
                    name="type"
                    required
                  />
                </div>
                <div class="form-group">
                  <label>Bank</label>
                  <div class="select2-purple">
                    <select
                      class="form-control select2"
                      multiple="multiple"
                      data-placeholder="Select Bank"
                      name="banks"
                      style="width: 100%"
                      required
                    >
                    <option value="<%= bank._id %>"></option>
                    <% bank.forEach(bank => { %>
                    <option value="<%= bank._id %>"
                          <% payment.banks.forEach(paymentBank => { %>
                          <% if(bank._id.toString() === paymentBank._id.toString()){ %>
                              selected
                          <% } %>
                          <% }) %>
                      >
                       <%= bank.ownerName %> | <%= bank.bankName %> | <%= bank.accountNumber %>
                    </option>
                    <% }) %>
                    </select>
                  </div>
                </div>
                </div>

                

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- include footer -->
<%- include ../../partials/footer.ejs %>
