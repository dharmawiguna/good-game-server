<table id="example2" class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>No</th>
      <th>Game</th>
      <th>Category</th>
      <th>Nominal</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% for(let i = 0; i< voucher.length; i++){ %>
    <tr>
      <td><%= i + 1%></td>
      <td><%= voucher[i].name %></td>
      <td><%= voucher[i]?.category?.name ?? '-' %></td>
      <td>
        <% voucher[i].nominal.forEach(item => { %>
        <span class="badge badge-warning">
          <%= item.coinName %> <%= item.coinQuantity %>
        </span>
        <% }) ?? '-' %>
      </td>
      <td>
        <% if(voucher[i].status == 'Y'){ %>
        <span class="badge badge-success"> Active </span>
        <% } else { %>
        <span class="badge badge-danger"> InActive </span>
        <% } %>
      </td>

      <td>
        <form
          action="/voucher/status/<%= voucher[i]._id%>?_method=PUT"
          method="POST"
          style="display: inline-block"
        >
          <button class="btn btn-primary btn-sm">
            <% if(voucher[i].status == 'Y'){ %><i class="fas fa-eye-slash"></i>
            Disactive <% } else { %>
            <i class="fas fa-eye"></i>
            Activate <% } %>
          </button>
        </form>
        <a
          href="/voucher/edit/<%= voucher[i]._id%>"
          class="btn btn-info btn-sm"
        >
          <i class="fas fa-pencil-alt"></i>
          Edit
        </a>
        <form
          action="/voucher/delete/<%= voucher[i]._id%>?_method=DELETE"
          method="POST"
          style="display: inline-block"
        >
          <button class="btn btn-danger btn-sm">
            <i class="fas fa-trash"></i>
            Delete
          </button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
